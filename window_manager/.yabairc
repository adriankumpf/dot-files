#!/usr/bin/env sh

# YABAI_CERT=yabai-cert sh -c "$(curl -sSL "https://git.io/update-yabai")" &

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          autoraise
yabai -m config window_placement             second_child
yabai -m config active_window_opacity        1.0
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config window_shadow                on
yabai -m config insert_feedback_color        0xaad75f5f
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               alt
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  20
yabai -m config bottom_padding               20
yabai -m config left_padding                 20
yabai -m config right_padding                20
yabai -m config window_gap                   10

yabai -m rule --add manage=off grid=4:4:1:1:2:2 app="1Password 7"
yabai -m rule --add manage=off grid=4:4:1:1:2:2 app="System Preferences"
yabai -m rule --add manage=off grid=4:4:1:1:2:2 app=Finder title=Copy
yabai -m rule --add manage=off grid=4:4:1:1:2:2 app=ObinsKit
yabai -m rule --add manage=off grid=4:4:1:1:2:2 app=iTerm title=Preferences

echo "yabai configuration loaded.."
